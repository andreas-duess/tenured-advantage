    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .hero {
      padding: 4rem 0;
      min-height: 500px;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .value-props,
    .latest-posts,
    .about-preview,
    .faq-section {
      padding: 3rem 0;
    }

    .prop-grid,
    .posts-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function initHeroParallax() {
    const parallaxBg = document.querySelector('[data-parallax-bg]') as HTMLElement;
    if (!parallaxBg) return;

    function updateParallax() {
      const scrolled = window.pageYOffset || document.documentElement.scrollTop;
      // Move background slower than scroll (0.5x speed)
      parallaxBg.style.transform = `translateY(${scrolled * 0.5}px)`;
    }

    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateParallax();
          ticking = false;
        });
        ticking = true;
      }
    });

    // Initial update
    updateParallax();
  }

  // Run on page load
  initHeroParallax();

  // Re-run on view transitions (Astro feature)
  document.addEventListener('astro:page-load', initHeroParallax);
</script>
