    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-content h3 {
    margin-top: 0;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .post-content h3 a {
    color: #1a1a1a;
    text-decoration: none;
  }

  .post-content h3 a:hover {
    color: #3e4956;
  }

  .post-meta {
    color: #6b7280;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .post-content p {
    color: #4b5563;
    margin-bottom: 1rem;
  }

  .read-more {
    color: #3e4956;
    font-weight: 600;
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .about-preview {
    padding: 5rem 0;
    background: #f9fafb;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .about-content h2 {
    margin-top: 0;
    font-size: 2rem;
    color: #1f2937;
  }

  .about-content p {
    color: #4b5563;
    margin-bottom: 1.5rem;
  }

  .btn-secondary {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: #ffffff;
    color: #3e4956;
    border: 2px solid #3e4956;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: #3e4956;
    color: #ffffff;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .about-image img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .faq-section {
    padding: 5rem 0;
    background: #ffffff;
  }

  .faq-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    margin-top: 0;
    color: #1f2937;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .faq-item {
    background: #f9fafb;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #3e4956;
  }

  .faq-item h3 {
    margin-top: 0;
    font-size: 1.25rem;
    color: #1f2937;
    margin-bottom: 1rem;
  }

