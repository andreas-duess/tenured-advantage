<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .legal-page {
    padding: 3rem 0;
    min-height: 70vh;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .last-updated {
    color: #6b7280;
    font-size: 0.95rem;
    margin-bottom: 0;
  }

  .legal-content section {
    margin-bottom: 3rem;
  }

  .legal-content h2 {
    font-size: 1.75rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .legal-content h3 {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }

  .legal-content p {
    color: #4b5563;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .legal-content ul {
    color: #4b5563;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

  .legal-content a {
    color: #3e4956;
    text-decoration: none;
  }

  .legal-content a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .legal-content h2 {
      font-size: 1.5rem;
    }
  }
</style>
